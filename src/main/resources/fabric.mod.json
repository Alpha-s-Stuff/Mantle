{
  "schemaVersion": 1,
  "id": "mantle",
  "version": "${version}",

  "name": "Mantle",
  "description": "Shared code for Slime Knights mods and others.",
  "authors": [
    "Slime Knights"
  ],
  "contact": {
    "sources": "https://github.com/Create-Fabric/Create-Refabricated"
  },

  "license": "MIT",
  "icon": "icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "slimeknights.mantle.Mantle"
    ],
    "client": [
      "slimeknights.mantle.client.ClientEvents"
    ],
    "cardinal-components": [
      "slimeknights.mantle.util.OffhandCooldownTracker"
    ]
  },
  "accessWidener": "mantle.accesswidener",
  "mixins": [
    "mantle.mixin.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": ">=0.44.0",
    "minecraft": ">=1.18.1"
  },
  "custom": {
    "loom:injected_interfaces": {
      "net.minecraft.resources.ResourceLocation": ["slimeknights/mantle/lib/extensions/ResourceLocationEx"],
      "net.minecraft.world.item.crafting.Ingredient": ["slimeknights/mantle/lib/extensions/IngredientEx"]
    },
    "cardinal-components": [
      "mantle:offhand_cooldown"
    ],
    "banner": "Mantle.png"
  }
}
